<h2>Update the drone</h2>

<form action="/drones/{{id}}/edit" method="post">

    <label for="name">Name: </label>
    <input type="text" id="name" name="name" required value="{{name}}">

    <label for="propellers">Propellers: </label>
    <input type="number" id="propellers" name="propellers" required value="{{propellers}}">

    <label for="maxSpeed">Max Speed: </label>
    <input type="number" id="maxSpeed" name="maxSpeed" required value="{{maxSpeed}}">

    <button type='submit'>Create Drone</button>
</form>