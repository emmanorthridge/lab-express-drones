<h2>Update the drone</h2>
{{#each editDrone}}
<form action="/drones/{{this.id}}/edit" method="POST">

    <label for="name">Name: </label>
    <input type="text" id="name" name="name" required value="{{this.name}}">

    <label for="propellers">Propellers: </label>
    <input type="number" id="propellers" name="propellers" required value="{{this.propellers}}">

    <label for="maxSpeed">Max Speed: </label>
    <input type="number" id="maxSpeed" name="maxSpeed" required value="{{this.maxSpeed}}">

    <button type='submit'>Create Drone</button>
</form>